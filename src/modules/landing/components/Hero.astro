---
import Counter from "src/modules/landing/components/Counter.astro";
import BrandSlider from "src/modules/landing/components/BrandSlider.astro";
---

<section class="hero" aria-labelledby="hero-title">
  <!-- Fila 1: Left / Right -->
  <div class="hero__top">
    <div class="hero__left">
      <span class="eyebrow"><i class="fa-solid fa-leaf" style="color: var(--color-accent-dark);"></i> Energía verde en Argentina</span>
        <div class="text__wrapper">
            <h1 id="hero-title" class="hero__title">
              <span class="title-line">Convertí un gasto</span>
              <span class="title-line">en una inversión</span>
            </h1>
            
            <p class="hero__desc">
              Impulsamos proyectos residenciales, comerciales e industriales con soluciones fotovoltaicas de alta eficiencia.
            </p>
        </div>

      <a class="hero__cta" href="#contacto">
        <span>Hablar con un experto</span>
        <svg class="cta__icon" width="18" height="18" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M5 12h12M13 5l7 7-7 7" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>

      <Counter />
    </div>

    <div class="hero__right">
      <div class="video-container">
        <video
          poster="/img/works/hardfacing/2.webp"
          autoplay
          muted
          loop
          playsinline
          preload="auto"
          class="video-bg"
        >
          <source src="/videos/hero.mp4" type="video/mp4" />
          Tu navegador no soporta videos HTML5.
        </video>
      </div>
    </div>
  </div>

  <!-- Fila 2: Slider de marcas -->
  <div class="hero__bottom">
    <BrandSlider />
  </div>
</section>

<style>
  /* Contenedor principal */
  .hero {
    background: var(--color-neutral100, #fff);
    color: var(--color-text-dark, #303030);
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    padding: 0 var(--spacing-md, 1rem) var(--spacing-xl, 2rem);
  }

  .hero__top {
    flex: 1 1 auto;
    display: flex;
    flex-direction: column;
    width: 1200px;
    margin: 0 auto;
    padding-top: var(--spacing-2xl, 3rem); 
    gap: var(--spacing-xl, 2rem);
  }


  @media (min-width: 576px) {
    .hero__top {
      flex-direction: row;
      justify-content: space-between; 
      align-items: flex-end;         
      gap: var(--spacing-2xl, 3rem);
    }
  }


  .hero__left {
    width: 100%;                 
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  .hero__right {
    width: 100%;
    display: flex;
    justify-content: flex-end; /* empuja el video a la derecha */
    align-items: flex-end;     /* al fondo */
  }

  .video-container {
    width: min(100%, 420px);
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border-radius: var(--border-radius-xl, var(--radius-xl, 1.5rem));
    box-shadow: var(--shadow-lg, 0 10px 15px -3px rgba(0,0,0,.1), 0 4px 6px -2px rgba(0,0,0,.05));
  }


  .video-bg {
    width: 100%;
    height: 100%;
    object-fit: cover; /* recorta excedentes */
    display: block;
  }

  /* Tipos y espaciados finos (columna izquierda) */
  .eyebrow {
    display: flex;
    font-family: var(--font-brand, Montserrat, sans-serif);
    font-size: 0.8rem;
    line-height: 1;
    gap: 1rem;
    background: var(--color-accent-light, #34B9BB);
    color: var(--color-accent-dark);
    padding: 0.5rem 0.75rem;
    border-radius: var(--radius-sm, 0.375rem);
    box-shadow: var(--shadow-sm, 0 1px 2px rgba(0,0,0,.05));
    margin-bottom: var(--spacing-sm, .5rem); /* pequeño gap con el título */
  }

  .hero__title {
    margin: 0;
    font-family: var(--font-title, Merriweather, serif);
    font-weight: 800;
    letter-spacing: -0.02em;
    line-height: 1.1;
    font-size: 2.441rem;
    color: var(--color-text-dark, #303030);
  }
  .hero__title .title-line { display: block; }

  .hero__desc {
    margin-top: var(--spacing-md); /* mayor gap entre título y párrafo */
    font-family: var(--font-text, Poppins, sans-serif);
    font-size: 1rem;
    color: var(--color-neutral500, #303030);
    opacity: .85;
    max-width: 60ch;
  }

  .hero__cta {
    margin-top: var(--spacing-2xl, 3rem); /* más grande entre párrafo y botones */
    display: inline-flex;
    align-items: center;
    gap: .5rem;
    background: var(--color-accent, #247e80);
    color: var(--color-accent-light, #fff);
    text-decoration: none;
    font-family: var(--font-text, Poppins, sans-serif);
    font-weight: 600;
    padding: 0.75rem 1.25rem;
    border-radius: var(--radius-md, .5rem);
    box-shadow: var(--shadow-md, 0 4px 6px rgba(0,0,0,.1));
    transition: transform .15s ease, background-color .2s ease;
  }
  .hero__cta:hover { 
    background: var(--color-accent-dark, #3CD5D7); 
    transform: translateY(-1px);
  }

  /* Gap pequeño entre botones y contador */
  .hero__left :where(.hero__cta) + :where(.impact-section) {
    margin-top: var(--spacing-md, 1rem);
  }

  /* Fila 2: Brand slider con buen espaciado final */
  .hero__bottom {
    max-width: 1200px;
    width: 100%;
    margin: var(--spacing-2xl, 3rem) auto 0;
    padding-bottom: var(--spacing-xl, 2rem);
  }

  @media (min-width: 576px) {
    .video-container {
      width: 420px;
      height: 540px; 
      aspect-ratio: auto; 
    }
  }
  /* Escalados del título en pantallas grandes */
  @media (min-width: 992px) {
    .hero { padding-left: var(--spacing-xl, 2rem); padding-right: var(--spacing-xl, 2rem); }
    .hero__title { font-size: 3.4rem; }
    .hero__bottom { margin-top: var(--spacing-3xl, 4rem); }
  }
  @media (min-width: 1280px) {
    .hero__title { font-size: 3.815rem; }
  }
</style>