---
import LogoBrand from "src/modules/brand/components/LogoBrand.astro"
---

<section class="logo-section">

    <h2 class="logo-brand__title">Conf√≠an en nosotros
    </h2>

    <div class="logo-brand">
        <div class="logo-brand__container">
            <LogoBrand image="/img/logos/clients/alborada.svg" alt="logo Alborada" sizeSm={90} sizeMd={100} sizeLg={100}/>
            <LogoBrand image="/img/logos/clients/tracsa.svg" alt="Logo Tracsa" sizeSm={110} sizeMd={140} sizeLg={140}/>
            <LogoBrand image="/img/logos/clients/mostaza.svg" alt="Logo Mostaza" sizeSm={90} sizeMd={100} sizeLg={100}/>
            <LogoBrand image="/img/logos/clients/shell.svg" alt="Logo Shell" sizeSm={90} sizeMd={100} sizeLg={100}/>
            <LogoBrand image="/img/logos/clients/fumisem.svg" alt="logo Fumisem" sizeSm={100} sizeMd={120} sizeLg={120}/>
            <LogoBrand image="/img/logos/clients/depaoli.svg" alt="logo Depaoli" sizeSm={110} sizeMd={130} sizeLg={130}/>
            <LogoBrand image="/img/logos/clients/hf.svg" alt="logo Hardfacing" sizeSm={120} sizeMd={160} sizeLg={160}/>
            <LogoBrand image="/img/logos/clients/cade.svg" alt="logo Cade" sizeSm={120} sizeMd={160} sizeLg={160}/>
        </div>
    </div>
</section>

<style>
.logo-section {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #e4e4e4;
    padding: 4rem 1rem;
}

.logo-brand__title {
    text-align: center;
    margin-bottom: 0.5rem;
    font-size: var(--font-size-base);
    font-weight: 600;
    color: #fafafa;
    padding: 0 1rem;
    text-transform: uppercase;

}

.logo-brand {
    width: 100%;
    max-width: 980px;
    padding: 1rem;
}

.logo-brand__container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 1rem;
}


@media (min-width: 576px) {
.logo-brand__container {
    gap: 1.25rem;
}

.logo-brand__title {
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
    font-weight: 500;
}
}

@media (min-width: 992px) {
.logo-brand__container {
    gap: 1.5rem;
}

.logo-brand__title {
    margin-bottom: 1rem;
    font-size: 1.5rem;
    font-weight: 600;
}
}

@media (min-width: 1280px) {
.logo-brand__container {
    gap: 2rem;
}
}

@media (min-width: 1440px) {
.logo-brand {
    padding: 2rem;
}
}
</style>
